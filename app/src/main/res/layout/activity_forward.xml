<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hp.programtutorial.Forward"
    android:background="@drawable/gradient">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="C"
        android:id="@+id/forwardc"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="133dp"
        android:background="#7d7777" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="java"
        android:id="@+id/forwardjava"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="#7d7777" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="c++"
        android:id="@+id/forwardcc"
        android:layout_below="@+id/forwardjava"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="49dp"
        android:background="#7d7777" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:id="@+id/backforward"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#7d7777" />
</RelativeLayout>
