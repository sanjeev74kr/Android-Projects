<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hp.programtutorial.Questions"
    android:background="@drawable/gradient">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Multiplication matrix"
        android:id="@+id/question1"
        android:layout_marginTop="0dp"
        android:layout_below="@+id/imageView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#7d7777" />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="factorial using recurrsion"
        android:id="@+id/question2"
        android:layout_marginTop="3dp"
        android:layout_below="@+id/imageView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#7d7777" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="store details of student using union"
        android:id="@+id/question3"
        android:layout_marginTop="3dp"
        android:layout_below="@+id/imageView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#7d7777" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="sort given number using pointer"
        android:id="@+id/question4"
        android:layout_marginTop="3dp"
        android:layout_below="@+id/imageView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#7d7777" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="count no. of character in file"
        android:id="@+id/question5"
        android:layout_marginTop="3dp"
        android:layout_below="@+id/imageView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#7d7777" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="reverse a number using while loop"
        android:id="@+id/question6"
        android:layout_marginTop="3dp"
        android:layout_below="@+id/imageView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#7d7777" />

        <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/question8"
        android:layout_marginTop="3dp"
        android:layout_below="@+id/imageView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#7d7777"
        android:text="count no. of characters in string" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="largest element in 4x4 matrix"
        android:id="@+id/question9"
        android:layout_marginTop="3dp"
        android:layout_below="@+id/imageView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#7d7777" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/question10"
        android:layout_marginTop="3dp"
        android:layout_below="@+id/imageView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#7d7777"
        android:text="Fibonacci using recursion" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="remove space in strings"
        android:id="@+id/question11"
        android:layout_marginTop="3dp"
        android:layout_below="@+id/imageView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#7d7777" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Count words in string"
        android:id="@+id/question12"
        android:layout_marginTop="3dp"
        android:layout_below="@+id/imageView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#7d7777" />
    </LinearLayout>

</ScrollView>
